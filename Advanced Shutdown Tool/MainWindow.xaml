<Window x:Class="Advanced_Shutdown_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Advanced_Shutdown_Tool" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Advanced Shutdown Tool" Height="200" Width="400">
    <StackPanel Orientation="Vertical" Margin="12">
        <Label Content="Schedule a shutdown" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="8"/>
        <StackPanel Orientation="Horizontal">
            <CheckBox x:Name="chkStudownTime" Content="Shutdown at time" IsChecked="True"/>
            <xctk:DateTimePicker x:Name="dateTimePicker" Margin="8,0,8,0"/>
        </StackPanel>
        <Button x:Name="btnScheduleShutdown" Content="Schedule Shutdown" HorizontalAlignment="Center" Margin="24" Padding="8" Click="btnScheduleShutdown_Click"/>
    </StackPanel>
</Window>
